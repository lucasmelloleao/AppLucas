                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Listando Categorias</h6>
                            <%= link_to new_backoffice_category_path, class:"btn btn-success btn-circle pull-right", style:"margin-top:-5px" do %>
