
  <head>
   
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    
    <%= stylesheet_link_tag 'sb-admin-2.min', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'sb-admin-2', media: 'all', 'data-turbolinks-track': 'reload' %>
    
    
  
     <script src="templates/backoffice/js/sb-admin-2.js"></script>
    
    
        <!-- Custom fonts for this template-->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" type="text/css">
    
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

  
  
    
  </head>



    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Bem Vindos!</h1>
                                    </div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

                                        <div class="form-group">
                                          
                                          
                                              <%= f.email_field :email,  class:"form-control form-control-user", placeholder:"Enter Email Address...", autofocus: true, autocomplete: "email" %>

                                        </div>
                                        
                                        <div class="form-group">
                                            <%= f.password_field :password,  placeholder:"Password",class:"form-control form-control-user", autocomplete: "current-password" %>

                                        </div>   
                                        
                                        <div class="form-group">
                                          
                                          
                                          <% if devise_mapping.rememberable? %>
                                              <div class="custom-control-input" 
                                              <%= f.check_box :remember_me %>
                                               <label class="custom-control-label" for="customCheck">Remember
                                            </div>
                                          <% end %>

                                          
                                          
                                        
                                      
                                      
                                        </div>
                                        
                                        
                                          <div class="btn btn-primary btn-user btn-block">
                                           
                                          <%= f.submit  class:"btn btn-primary btn-user btn-block", value:"Entrar"  %> 
                                            
                                          </div>

                                        
                                        
                                        

                                    <% end %>

<%= render "admins/shared/links" %>
<br>
<br>
<br>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>
    </body>